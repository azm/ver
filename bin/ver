#!/usr/bin/env ruby

begin
  require 'ver'
rescue LoadError
  dir = File.dirname(__FILE__)
  file = File.expand_path(File.join(dir, '../lib/ver'))
  require file
end

require 'optparse'

op = OptionParser.new do |o|
  o.on('-h', '--help'){ puts o; exit }
  o.on('-v', '--version'){ puts "VER: #{VER::VERSION}"; exit }
end

op.parse!(ARGV)

VER.start(*ARGV)
