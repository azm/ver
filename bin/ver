#!/usr/bin/env ruby

require 'optparse'

ver = File.expand_path(File.join(File.dirname(__FILE__), '../lib/ver'))

op = OptionParser.new do |o|
  o.on('-h', '--help'){ puts o; exit }
  o.on('-v', '--version'){ require ver; puts "VER: #{VER::VERSION}"; exit }
end

op.parse!(ARGV)

require ver
VER.start(*ARGV)
